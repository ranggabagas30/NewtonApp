<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.newtonapp">
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <application
        android:name=".NewtonApplication"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".view.ui.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ui.ForgetPasswordActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ui.ReportDetailActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ui.ReportActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.ApprovalActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".view.ui.ProductHistoryActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".view.ui.OnboardingScreenActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".view.ui.DashboardActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".view.ui.DashboardActivity" />
        </activity>
        <activity
            android:name=".view.ui.SolvingActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".view.ui.DashboardActivity"/>
        <activity android:name=".view.ui.OutstandingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ui.DashboardActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.ui.MainActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>