<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newtonapp.view.ui.ReportDetailActivity">

    <include
        layout="@layout/layout_header_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/header.layout.toolbar"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="25dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/reportdetail.iv.pic_printer"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintHeight_percent="0.3"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/printer_transparent_background"
                tools:layout_editor_absoluteX="0dp" />

            <LinearLayout
                android:id="@+id/reportdetail.layout.problem.brief"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/reportdetail.iv.pic_printer"
                tools:layout_editor_absoluteX="25dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Problem Info"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.customer.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Customer" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.customer.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.customer.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="BK127789" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.idprinter.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="SN" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.idprinter.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.idprinter.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="120301231" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.idtechnician.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Teknisi" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.idtechnician.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.idtechnician.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="T12300303" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/darker_gray"
                    android:visibility="invisible" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Detail"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.tglreport.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Tgl report" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.tglreport.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.tglreport.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="21-07-2019" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.waktu.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Waktu" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.waktu.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.waktu.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="21:00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.contract.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Kontrak No." />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.contract.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.contract.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="BGH-123/1231/1231" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.product.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Produksi" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.product.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.product.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="EPSON L360 Series" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.aktivitas.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Aktivitas" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.aktivitas.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.aktivitas.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="Service Cartridge" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.result.label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.33"
                        android:text="Result" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.result.doubledot"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.09"
                        android:text=":" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reportdetail.tv.result.value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.58"
                        android:gravity="center"
                        android:text="Cartridge rusak ganti baru" />
                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
