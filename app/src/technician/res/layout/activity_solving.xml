<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.newtonapp.view.ui.SolvingActivity">

    <include
        layout="@layout/layout_header_toolbar"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/solving.layout.body"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@+id/header.layout.toolbar"
        app:layout_constraintBottom_toTopOf="@+id/footer.layout.root">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/solving.et.idcustomer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableEnd="@drawable/ic_perm_identity_black_24dp"
            android:hint="ID Customer"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/solving.et.idbarcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
            android:hint="Scan barcode"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/solving.et.note"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="30dp"
            android:gravity="start"
            android:hint="Note : " />

        <LinearLayout
            android:id="@+id/solving.layout.update_tracking"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:weightSum="1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/solving.btn.solved"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="10dp"
                android:text="Solved"
                android:textColor="@android:color/white"
                android:background="@color/button_blue"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/solving.btn.hold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="10dp"
                android:text="Hold"
                android:textColor="@android:color/white"
                android:background="@color/button_orange"/>
        </LinearLayout>
    </LinearLayout>

    <include
        layout="@layout/layout_footer"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
