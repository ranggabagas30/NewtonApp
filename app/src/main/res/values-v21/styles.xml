<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Widget.Newton.AppBar.V21" parent="Base.Widget.Newton.AppBar">
        <item name="android:elevation">21dp</item>
    </style>

    <style name="AppTheme.AppBar" parent="Base.Widget.Newton.AppBar.V21">
    </style>

    <style name="Base.Widget.Newton.Button.Dark.V21" parent="Base.Widget.Newton.Button.Dark">
        <item name="android:elevation">21dp</item>
    </style>

    <style name="AppTheme.ButtonPrimaryDark" parent="Base.Widget.Newton.Button.Dark.V21">
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.ButtonBlueDark" parent="Base.Widget.Newton.Button.Dark.V21">
        <item name="android:background">@color/button_blue</item>
    </style>

    <style name="AppTheme.ButtonOrangeDark" parent="Base.Widget.Newton.Button.Dark.V21">
        <item name="android:background">@color/button_orange</item>
    </style>

    <style name="AppTheme.CardView" parent="android:Widget.TextView">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="cardUseCompatPadding">true</item>
