<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/failed.layout.body"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/shape_rect_gradient_alpha_to_white_solid">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/body.iv.failed.logo"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/ic_empty" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/body.tv.failed.text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/success_message_empty_data_item"
        android:textSize="25sp"
        android:textStyle="bold"/>
</LinearLayout>